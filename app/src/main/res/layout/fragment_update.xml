<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <EditText
            android:id="@+id/UpdateFirstName"
            android:hint="Enter the First Name"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"

            />

        <EditText
            android:id="@+id/UpdateLastName"
            android:hint="Enter the Last Name"
            android:layout_below="@id/UpdateFirstName"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <EditText
            android:id="@+id/UpdatePersonAge"
            android:hint="Enter the Age"
            android:layout_below="@id/UpdateLastName"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <Button
            android:id="@+id/Update_add_button"
            android:layout_marginLeft="80sp"
            android:layout_below="@id/UpdatePersonAge"

            android:layout_marginRight="80sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update" />
    </RelativeLayout>
</LinearLayout>